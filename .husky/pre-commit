echo "ğŸ“¦ Verifying API build..."
npm run build --workspace=@rwa-asset/api
if [ $? -ne 0 ]; then
  echo "âŒ API build failed. Please fix the errors before committing."
  exit 1
fi

echo "ğŸ“¦ Verifying Web build..."
npm run build --workspace=@rwa-asset/web
if [ $? -ne 0 ]; then
  echo "âŒ Web build failed. Please fix the errors before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
