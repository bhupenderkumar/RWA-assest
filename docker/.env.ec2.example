# ===========================================
# RWA Platform - EC2 Environment Configuration
# ===========================================
# Copy this file to .env and update the values
# Usage: cp .env.ec2.example .env

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=rwa_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD_123
POSTGRES_DB=rwa_platform

# ===========================================
# REDIS
# ===========================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456

# ===========================================
# API CONFIGURATION
# ===========================================
NODE_ENV=production
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
ENCRYPTION_KEY=a1b2c3d4e5f6a7b8c9d0e1f2a3b4c5d6

# ===========================================
# SOLANA CONFIGURATION
# ===========================================
SOLANA_RPC_URL=https://api.devnet.solana.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Replace YOUR_EC2_PUBLIC_IP with your actual EC2 public IP or domain
NEXT_PUBLIC_API_URL=http://YOUR_EC2_PUBLIC_IP:3001/api/v1
CORS_ORIGINS=http://YOUR_EC2_PUBLIC_IP:3000,http://YOUR_EC2_PUBLIC_IP:3001

# Disable Civic for now (to avoid CORS issues)
NEXT_PUBLIC_CIVIC_DISABLED=true

# ===========================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ===========================================
CIVIC_GATEKEEPER_NETWORK=
CIVIC_API_KEY=
SECURITIZE_BASE_URL=https://api.securitize.io
SECURITIZE_API_KEY=
ANCHORAGE_BASE_URL=https://api.anchorage.com
ANCHORAGE_API_KEY=
